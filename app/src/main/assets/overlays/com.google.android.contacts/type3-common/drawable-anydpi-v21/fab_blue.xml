<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="@android:color/background_dark"
                android:startColor="@*android:color/primary_material_dark"
                android:type="linear"/>
            <size
                android:width="56dp"
                android:height="56dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:innerRadiusRatio="2.22"
            android:shape="ring"
            android:thicknessRatio="20"
            android:useLevel="false">
            <gradient
                android:angle="135"
                android:endColor="@*com.google.android.contacts:color/accent_material_light"
                android:startColor="@*com.google.android.contacts:color/accent_material_light"/>
        </shape>
    </item>
</layer-list>